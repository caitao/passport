<div class="ui middle aligned center aligned grid">
  <div class="column">
    <h2 class="ui teal image header">
      <!-- <img src="/images/nan.jpg" class="image"> -->
      <div class="content">
        Sign up your account
      </div>
    </h2>
    {{#if errors}}
      {{#each errors}}
        <div class="ui left pointing teal label">{{msg}} </div>
      {{/each}}
    {{/if}}
    <form class="ui large form" method="post" action="/users/register">
      <div class="ui stacked segment">
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <input type="text" name="name" placeholder="Name">
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <input type="text" name="username" placeholder="User Name">
          </div>
        </div>

        <div class="field">
          <div class="ui left icon input">
            <i class="mail square icon"></i>
            <input type="text" name="email" placeholder="E-mail Address">
          </div>
        </div>

        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <input type="password" name="password" placeholder="Password">
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <input type="password" name="password2" placeholder="Confirm Password">
          </div>
        </div>
        <button class="ui fluid large teal submit button" type="submit">Sign up</button>
      </div>

      <div class="ui error message"></div>

    </form>
  </div>
</div>
